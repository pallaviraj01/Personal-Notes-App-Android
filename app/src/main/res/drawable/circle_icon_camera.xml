<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Yellow Circle Background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#6486A5"/> <!-- Ensure yellow is defined in your colors.xml -->
            <size
                android:width="56dp"
                android:height="56dp"/>
        </shape>
    </item>
    <!-- Camera Icon centered within the circle -->
    <item android:drawable="@drawable/ic_camera"
        android:gravity="center"
        android:width="27dp"
        android:height="27dp"/>
</layer-list>

